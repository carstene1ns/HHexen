#	base/i_action.o \


%.o: %.c
	$(CC) -c $(CFLAGS) $(CPPFLAGS) -o $@ $<


ifeq "$(SVGAHEXEN)" "true"
svga: $(OBJ_SVGA) $(OBJ_BASE)
	$(CC) -o hhexen-svga $(OBJ_SVGA) $(OBJ_BASE) $(BASELIBS) $(SVGALIBS)
else

ifeq "$(GLHEXEN)" "true"
opengl: $(OBJ_GLSDL) $(OBJ_OPENGL) $(OBJ_BASE)
	$(CC) -o hhexen-gl $(OBJ_GLSDL) $(OBJ_OPENGL) $(OBJ_BASE) $(BASELIBS) $(GLLIBS) $(SDL_LIBS)
else
sdl: $(OBJ_SWSDL) $(OBJ_BASE)
	$(CC) -o hhexen-sdl $(OBJ_SWSDL) $(OBJ_BASE) $(BASELIBS) $(SDL_LIBS)
endif

endif

clean:
	$(RM) base/*.o
	$(RM) opengl/*.o
	$(RM) sdl/*.o
	$(RM) svgalib/*.o

