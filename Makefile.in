	opengl/ogl_draw.o \
	opengl/ogl_rend.o \
	opengl/ogl_rl.o \
	opengl/ogl_scr.o \
	opengl/ogl_sky.o \
	opengl/ogl_tex.o \
	opengl/ogl_main.o \
	opengl/m_bams.o

OBJ_BASE = \
